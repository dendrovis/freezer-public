{
  "name": "freezer-public",
  "version": "0.1.0",
  "description": "provide snapshots of your pages",
  "type": "module",
  "main": "code.js",
  "scripts": {
    "dev": "bunx --bun vite -c ./vite.config.ui.ts",
    "test:sanity": "echo test",
    "test:linter:eslint": "eslint . --fix-dry-run",
    "test:linter:prettier": "prettier . --check",
    "test:linter:stylelint": "npx stylelint \"**/*.{css,scss}\"",
    "test:linter": "eslint . --fix-dry-run && prettier . --check && npx stylelint \"**/*.{css,scss}\"",
    "build:plugins": "tsc src/plugin/index.ts --outDir ./build --noCheck",
    "build:ui": "tsc && vite build -c ./vite.config.ui.ts",
    "build": "bun run build:ui && bun run build:plugins"
  },
  "author": "dendrovis team",
  "license": "MIT",
  "dependencies": {
    "classnames": "^2.5.1",
    "modern-normalize": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.1",
    "@eslint/js": "^9.16.0",
    "@figma/eslint-plugin-figma-plugins": "*",
    "@figma/plugin-typings": "*",
    "@types/node": "^20.14.10",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "eslint": "^9.16.0",
    "eslint-plugin-react": "^7.37.2",
    "globals": "^15.13.0",
    "prettier": "3.3.3",
    "sass": "^1.77.8",
    "stylelint": "^16.7.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "typescript": "^5.3.2",
    "typescript-eslint": "^8.17.0",
    "vite": "^5.3.3",
    "vite-plugin-singlefile": "^2.0.3"
  }
}
